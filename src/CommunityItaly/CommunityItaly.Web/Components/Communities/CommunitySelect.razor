<Select TValue="string" Multiple="true" SelectedValue="CommunitySelected" SelectedValueChanged="CommunitySelectedChanged">
	@foreach (var item in CommunitiesToSelect)
	{
		<SelectItem Value="@item.ShortName">
			<div style="display:inline">
				<img src="@LinkViewModel.GetImageIcon(item.Logo).ToString()" />
				@item.Name
			</div>
		</SelectItem>
	}
</Select>
