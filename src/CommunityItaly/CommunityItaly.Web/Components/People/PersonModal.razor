@if(PersonData != default)
{
	<MatDialog @bind-IsOpen="@IsOpen">
		<MatDialogTitle>@PersonData.Name @PersonData.Surname</MatDialogTitle>
		<MatDialogContent>
			<MatCardMedia Wide="true" ImageUrl="@LinkViewModel.GetImageMedium(PersonData.Picture).ToString()"></MatCardMedia>
		</MatDialogContent>
		<MatDialogActions>
			<MatButton OnClick="@(e => { IsOpen = false; })">Ok</MatButton>
		</MatDialogActions>
	</MatDialog>
}

