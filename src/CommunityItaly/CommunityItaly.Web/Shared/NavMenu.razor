@inject NavigationManager navigationManager

<Sidebar @ref="AppStore.Sidebar">
	<SidebarContent>
		<SidebarBrand>
			Community Italy
		</SidebarBrand>
		<SidebarNavigation>
			<SidebarLabel>Community Italy</SidebarLabel>
			<SidebarItem>
				<SidebarLink To="@Routes.Home()" Title="Home">
					<Icon Name="IconName.SliderHorizontal" Margin="Margin.Is3.FromRight" />Home
				</SidebarLink>
			</SidebarItem>
			<SidebarItem>
				<SidebarLink Toggled="(isOpen)=> eventsSubItems.Toggle(isOpen)" IsShow="true">
					<Icon Name="IconName.Mail" Margin="Margin.Is3.FromRight" />Eventi
				</SidebarLink>
				<SidebarSubItem @ref="eventsSubItems" IsShow="true" >
					<SidebarLink To="@Routes.EventList()" Title="Eventi">
						<Icon Name="IconName.Dashboard" Margin="Margin.Is3.FromRight" /> Event
					</SidebarLink>
					<SidebarLink To="@Routes.EventReports()" Title="Ricerca">
						<Icon Name="IconName.Dashboard" Margin="Margin.Is3.FromRight" /> Ricerca
					</SidebarLink>
				</SidebarSubItem>
			</SidebarItem>
			<SidebarItem>
				<SidebarLink To="@Routes.CommunityList()" Title="Community">
					<Icon Name="IconName.Dashboard" Margin="Margin.Is3.FromRight" /> Community
				</SidebarLink>
			</SidebarItem>
		</SidebarNavigation>
	</SidebarContent>
</Sidebar>


@code {
	SidebarSubItem eventsSubItems;

	void ToggleSidebar()
	{
		AppStore.Sidebar.Toggle();
	}

}
